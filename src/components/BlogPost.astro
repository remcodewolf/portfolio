---
const { url, title, cover, coverAlt, description } = Astro.props;
import { Image } from "astro:assets";
---

<li>
  <a href={url}>
    <div
      class="border border-gray-200 h-full p-4 rounded-xl shadow-md mx-auto max-w-md min-h-1/1"
    >
      <div class="h-full flex flex-col">
        {
          cover && coverAlt && (
            <Image
              class="w-full shadow-md"
              src={cover}
              alt={coverAlt}
              widths={[400, 800, 1280]}
              sizes="(max-width: 1280px) 100vw, 1280px"
              format="webp"
              loading="lazy"
            />
          )
        }
        <div class="flex-grow flex flex-col justify-center">
          <h2 class="text-xl font-bold">{title}</h2>
          <p class="text-gray-500">{description}</p>
        </div>
      </div>
    </div>
  </a>
</li>
