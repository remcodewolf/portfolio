---
const { url, title, cover, coverAlt, description } = Astro.props;
import { Image } from "astro:assets";
---

<li>
  <a href={url}>
    <div
      class="border border-gray-200 p-4 rounded-xl shadow-md mx-auto max-w-md"
    >
      {
        cover && coverAlt && (
          <Image
            class="w-full shadow-md"
            src={cover}
            alt={coverAlt}
            widths={[400, 800, 1280]}
            sizes="(max-width: 1280px) 100vw, 1280px"
            format="webp"
            loading="lazy"
          />
        )
      }

      <h2 class="text-xl font-bold">{title}</h2>
      <p class="text-gray-500">{description}</p>
    </div>
  </a>
</li>
